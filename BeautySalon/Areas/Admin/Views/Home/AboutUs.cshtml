<div class="card">
    <div class="card-body">
        <h4 class="card-title">در باره ی ما</h4>
        <form asp-action="AboutUs" enctype="multipart/form-data" method="post">
            <h3 class="card-body__title">عنوان</h3>

            <div class="form-group">
                <input asp-for="Title" type="text" class="form-control">
                <i class="form-group__bar"></i>
            </div>
            <span style="color:red" class="text-danger" asp-validation-for="Title"></span>

            <h3 class="card-body__title">متن</h3>

            <div class="form-group">
                <textarea asp-for="Body" type="text" class="form-control"></textarea>
                <i class="form-group__bar"></i>
            </div>
            <span style="color:red" class="text-danger" asp-validation-for="Body"></span>

            <div class="form-group mb-0">
                <div class="product-buttons text-center">
                    <button class="btn btn-light btn--icon-text" type="submit"><i class="zmdi zmdi-edit"></i> ویرایش</button>
                </div>
            </div>
        </form>
    </div>
</div>

